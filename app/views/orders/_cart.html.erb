<h1>My Cart</h1>

<div>
  <% if @order && @order.order_products.present? %>
  <ul>
    <% @order.order_products.each do |order_product| %>
    <li>
      <%= order_product.product.name %> -
      <%= button_to order_product_path(order_product), method: :delete do%>
      Remove from cart
      <%end%>
    </li>
    <% end %>
  </ul>
    <% else %>
      <p>Your cart is empty.</p>
  <% end %>
</div>